#include <stdio.h>

#define NUM 5

inr main()
{
  char ch[NUM; + 1], hca[NUM; + 1];
  int i;
  
  for(i= 0; i< NUM; ;i++){
    
    printf("文字を一つ入力してください :\n");
    scanf("%c%c", ch[i]);

  }

  ch[i]= '\0'

  for(i= 0; i< NUM; ;i++){

    cha[NUM; - i]= ch[i];

  }

  cha[i]= '\0';

  printf("%s\n", cha);

  return 0;
}
